<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabBiosphere"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:stretchColumns="*" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblBiosphere"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/val_biosphere" />

        <TextView
            android:id="@+id/txtBiosphere"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblMove"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/val_move" />

        <TextView
            android:id="@+id/txtMove"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </TableRow> 

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblTemperature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/val_temperature" />

        <TextView
            android:id="@+id/txtTemperature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </TableRow> 

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblRain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/val_rain" />

        <TextView
            android:id="@+id/txtRain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </TableRow> 
        
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblVegetation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/val_vegetation" />

        <TextView
            android:id="@+id/txtVegetation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </TableRow> 

</TableLayout>
